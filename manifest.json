{
  "manifest_version": 2,

  "name": "BadBlock",
  "description": "",
  "version": "1.0",

  "background": {
    "scripts": ["jquery-3.3.1.js","background.js"],
    "persistent": true
  },
  
  "browser_action": {
    "default_icon": "images/addblock.png",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "popup.html"
  ],
  "content_scripts":[ 
	{
    "matches": ["<all_urls>"],
		"js": ["jquery-3.3.1.js","content.js"]
	}
  ],
  "permissions": [
    "http://*/*", "https://*/*", "contextMenus", "webRequest", "tabs", "idle", "storage", "activeTab", "declarativeContent", "webRequestBlocking", "webNavigation","alarms"
  ],
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}